{

  "manifest_version": 2,
  "name": "Ghbdtn! Привет!",
  "version": "1.0",
  "default_locale": "ru",
  "description": "Переводит весь текст набранный на английском на русский",
  "icons": {
    "48": "icons/icon-72.png"
  },

  "applications": {
    "gecko": {
      "id": "01gus10@mail.ru",
      "strict_min_version": "45.0"
    }
  },

  "browser_action": {
    "default_icon": "icons/icon-72.png",
    "default_title": "Ghbdtn! Привет!"
  },

  "background": {
    "scripts": ["menu.js"]
  },

  "permissions": ["activeTab", "menus"],

  "content_scripts": [
    {
      "matches": ["<all_urls>"]
    }
  ]

}
